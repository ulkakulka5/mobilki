<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.MainPage">

    <ContentPage.Resources>

    </ContentPage.Resources>
    <VerticalStackLayout Spacing="15">
        <Label Text="TODO list" FontSize="Large" FontAttributes="Bold" HorizontalTextAlignment="Center" ></Label>
        <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
            <Entry x:Name="todoEntry" WidthRequest="150" HorizontalTextAlignment="Center" ></Entry>
            <Button Clicked="addBtn_Clicked" Text="Add" WidthRequest="80" ></Button>
        </HorizontalStackLayout>

        <CollectionView x:Name="todoListView"
                        ItemsSource="{Binding TodoItems}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Margin="5" Padding="10" BackgroundColor="#eee">
                        <Label Text="{Binding .}" FontSize="Medium"/>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>

</ContentPage>
