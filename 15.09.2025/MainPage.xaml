<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.MainPage">

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0,1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>



        <Label Text="Shopping List" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" HorizontalTextAlignment="Center" FontSize="22"></Label>
        <Entry x:Name="AddItemEntry" WidthRequest="170" HeightRequest="50" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Background="LightPink" TextColor="White"></Entry>
        <Button Clicked="Add_Clicked" Text="Add" WidthRequest="90" HeightRequest="50" Grid.Column="2" Grid.Row="1" FontSize="18" BorderColor="DeepPink"></Button>
        <CollectionView Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2" Grid.RowSpan="2" Background="LightPink" x:Name="collectionview" ItemsSource="{Binding Products}" SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="*,*" Padding="10">
                        <Label Grid.Column="0" Text="{Binding Name}" VerticalOptions="Center" />
                        <Label Grid.Column="1" Text="{Binding Quantity}" VerticalOptions="Center" HorizontalOptions="End" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Clicked="Delete_Clicked" Text="Delete" WidthRequest="90" HeightRequest="50" Grid.Column="2" Grid.Row="4" FontSize="18" BorderColor="Black"></Button>
    </Grid>
</ContentPage>
